<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_film_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_film_poster"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_film_poster"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_film_en"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@color/text_gray_light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/item_film_name"
        app:layout_constraintStart_toStartOf="@+id/item_film_name"
        app:layout_constraintTop_toBottomOf="@+id/item_film_name" />

    <TextView
        android:id="@+id/item_film_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/text_gray_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_film_poster"
        app:layout_constraintStart_toStartOf="@+id/item_film_en" />

    <TextView
        android:id="@+id/item_film_rating"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:background="#3BB33B"
        android:gravity="center"
        android:text="8.4"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_film_poster" />
</androidx.constraintlayout.widget.ConstraintLayout>